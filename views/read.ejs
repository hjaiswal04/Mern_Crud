<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page</title>

  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-screen bg-zinc-900 p-10 text-white">
    <a class="text-blue-500 mt-10" href="/">Home</a>
    <h1 class="text-3xl tracking-tighter mb-3 text-white">Read Users</h1>

    <div class="user flex gap-5 flex-wrap">
      <% users.forEach(function(user) { %>
        <div class="user w-72 p-5 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
<img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
          </div>
          <h3 class="text-2xl tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-7">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit</a>
            <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
