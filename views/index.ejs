<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create User</title>

  <!-- Optional custom stylesheet -->
  <link rel="stylesheet" href="/stylesheets/style.css" />

  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
  <div class="w-full h-screen p-10">
    
    <!-- Navigation -->
    <div class="mb-10">
      <a class="text-blue-500 underline hover:text-blue-300" href="/read">Go to Read Page</a>
    </div>

    <!-- Title -->
    <h1 class="text-3xl tracking-tighter mb-6">Create User</h1>

    <!-- Create User Form -->
    <form action="/create" method="POST" class="max-w-md">
      <input 
        class="w-full px-5 py-2 mb-4 border-2 border-zinc-800 rounded-lg bg-transparent text-white placeholder-zinc-400"
        type="text" name="name" placeholder="Name" required>

      <input 
        class="w-full px-5 py-2 mb-4 border-2 border-zinc-800 rounded-lg bg-transparent text-white placeholder-zinc-400"
        type="email" name="email" placeholder="Email" required>

      <input 
        class="w-full px-5 py-2 mb-6 border-2 border-zinc-800 rounded-lg bg-transparent text-white placeholder-zinc-400"
        type="text" name="image" placeholder="Image URL">

      <input 
        type="submit" value="Submit"
        class="w-full px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg cursor-pointer transition-all duration-200">
    </form>

  </div>
</body>
</html>
